{
    "configurations": {
        "run - debugpy": {
            "adapter": "debugpy",
            "configuration": {
                "request": "launch",
                "type": "python",
                "cwd": "${workspaceRoot}",
                "program": "${file}",
                "stopOnEntry": false ,
                "console": "integratedTerminal"
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": "",
                    "userUnhandled": ""
                }
            }
        }
    }
}
