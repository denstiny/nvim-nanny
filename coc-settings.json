  "suggest.virtualText": true,
  "suggest.noselect": true,
    "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.defaultSortMethod": "none",
  "suggest.detailField": "abbr",
  "colors.enable": true,
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.enableSign": false,
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true
  },
  "disabledFeatures": [ "diagnostics"],
  "notification.statusLineProgress": false,
  "pullDiagnostic.onChange": true,
  "pullDiagnostic.onSave": false,
    "Lua.completion.callSnippet": "Both",
  "Lua.completion.postfix": ".",
  "Lua.diagnostics.globals": [
    "vim",
    "jit"
  ],
  "Lua.runtime.version": "LuaJIT",
  "Lua.workspace.checkThirdParty": false,
  "signature.floatConfig"	: {
    "border": true,
    "rounded": true
  },
  "floatFactory.floatConfig":{
    "border": true,
    "rounded": true
  },

